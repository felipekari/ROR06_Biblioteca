<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= search_form_for @q do |f| %>

  <%= f.label :status %>
  <%= f.select :status_eq, Book.statuses.keys, {:include_blank => 'Todos'}, {:class => 'form-control'} %>

  <%= f.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :title, "Titulo", default_order: :desc) %></th>
      <th>Autor</th>
      <th>Estado</th>
      <th>Fecha de prestamo</th>
      <th>Fecha de devolucion</th>
      <th>Poseedor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.status %></td>
        <td><%= book.borrowing_date %></td>
        <td><%= book.givenback_date %></td>
        <td><%= book.holder %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
